.dropdowns.pull-right
  .dropdown.width-240
    %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
      = t('books.dropdown_menu.newest_first')
      %i.fa.fa-angle-down.dropdown-icon.pull-right
    %ul.dropdown-menu
      %li
        =link_to t('books.dropdown_menu.newest_first'), recent_categories_path(@category)
      %li
        %a{href: "#"}
          = t('books.dropdown_menu.popular_first')
      %li
        %a{href: "#"}
          = t('books.dropdown_menu.price.low_to_hight')
      %li
        %a{href: "#"}
          = t('books.dropdown_menu.price.hight_to_low')