%ul.list-inline.pt-10.mb-25.mr-240
  %li.mr-35
    = link_to categories_path, class: 'filter-link' do
      %span.filter-link= t('.all')
      %span.badge.general-badge
        = Book.all.count
  -@categories.each do |category|
    %li.mr-35
      = link_to categories_path(category: category), class: 'filter-link' do
        %span.filter-link
          =category.name
        %span.badge.general-badge
          =category.books_count
