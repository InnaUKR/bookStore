=ff.fields_for parameter, form do |f|
  .form-group{ class: ('has-error' if form.errors.messages[:first_name].any?) }
    = f.label :first_name, class: "control-label input-label"
    = f.text_field :first_name, class: "form-control"
    %span.help-block= form.errors.messages[:first_name].join(', ')

  .form-group{ class: ('has-error' if form.errors.messages[:last_name].any?) }
    = f.label :last_name, class: "control-label input-label"
    = f.text_field :last_name, class: "form-control",
                    value: "#{form.last_name}"
    %span.help-block= form.errors.messages[:last_name].join(', ')

  .form-group{ class: ('has-error' if form.errors.messages.include? :address) }
    = f.label :address, class: "control-label input-label"
    = f.text_field :address, class: "form-control"
    %span.help-block= form.errors.messages[:address].join(', ')
  .form-group{ class: ('has-error' if form.errors.messages.include? :city) }
    = f.label :city, class: "control-label input-label"
    = f.text_field :city, class: "form-control"
    %span.help-block= form.errors.messages[:city].join(', ')
  .form-group{ class: ('has-error' if form.errors.messages.include? :zipcode) }
    = f.label :zip, class: "control-label input-label"
    = f.text_field :zip, class: "form-control"
    %span.help-block= form.errors.messages[:zipcode].join(', ')
  .form-group{ class: ('has-error' if form.errors.messages.include? :country) }
    = f.label :country, class: "control-label input-label"
    = f.text_field :country, class: "form-control"
    %span.help-block= form.errors.messages[:country].join(', ')

  .form-group{ class: ('has-error' if form.errors.messages.include? :phone) }
    = f.label :phone, class: "control-label input-label"
    = f.text_field :phone, class: "form-control"
    %span.help-block= form.errors.messages[:phone].join(', ')