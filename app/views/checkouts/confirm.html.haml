%main.container.general-main-wrap
  =render 'partials/checkouts/steps'
  .row.mb-20
    .col-sm-3
      %h3.general-subtitle= t('checkouts.show.confirm.shipping_address')
      %p.general-address.shipping
        = @order.shipping_address.first_name
        = @order.shipping_address.last_name
        = link_to wizard_path(:address) do
          %span.general-edit= t('checkouts.show.confirm.edit')
        %br
        = @order.shipping_address.address
        = @order.shipping_address.city
        = @order.shipping_address.zip
        %br
        = @order.shipping_address.country
        %br
        Phone
        = @order.shipping_address.phone
    .col-sm-3
      %h3.general-subtitle= t('checkouts.show.confirm.billing_address')
      %p.general-address
        = @order.billing_address.first_name
        = @order.billing_address.last_name
        = link_to wizard_path(:address) do
          %span.general-edit= t('checkouts.show.confirm.edit')
        %br
        = @order.billing_address.address
        = @order.billing_address.city
        = @order.billing_address.zip
        %br
        = @order.billing_address.country
        %br
        Phone
        = @order.billing_address.phone
    .col-sm-3
      %h3.general-subtitle= t('checkouts.show.confirm.shipments')
      %p.general-address
        = @order.delivery.method_name
        = link_to wizard_path(:delivery) do
          %span.general-edit= t('checkouts.show.confirm.edit')
    .col-sm-3
      %h3.general-subtitle= t('checkouts.show.confirm.payment_iformation')
      %p.general-address
        = "** ** ** #{@order.credit_card.number.last(4)}"
        = link_to wizard_path(:payment) do
          %span.general-edit= t('checkouts.show.confirm.edit')
        %br
        = @order.credit_card.exp_date
  .visible-xs
    = render partial:'orders/item_mobile', collection: @order.line_items.sort_by(&:created_at), as: :item
    %table.table
      =render partial: 'partials/order_summary'
  .hidden-xs.divider-lg.pt-20
    %table.table.table-hover
      = render 'partials/cart/table_header_for_desktop'
      = render partial:'orders/item_desktop', collection: @order.line_items.sort_by(&:created_at), as: :item
    .text-center.general-text-right
      %p.in-gold-500.font-18 Order Summary
      %table.general-summary-table.general-summary-table-right.general-text-right
        =render partial: 'partials/order_summary'
  .text-center
    =link_to 'Place Order', wizard_path, method: :put, class: 'btn btn-default mb-20'