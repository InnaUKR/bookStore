%main.container.mb-res-50
  %h1.general-title-margin Checkout
  %ul.steps.list-inline
    %li.step.done
      %span.step-number 1
      %span.step-text.hidden-xs Address
    %li.step-divider
    %li.step.done
      %span.step-number 2
      %span.step-text.hidden-xs Delivery
    %li.step-divider
    %li.step.active
      %span.step-number 3
      %span.step-text.hidden-xs Payment
    %li.step-divider
    %li.step
      %span.step-number 4
      %span.step-text.hidden-xs Confirm
    %li.step-divider
    %li.step
      %span.step-number 5
      %span.step-text.hidden-xs Complete
  %h3.general-subtitle Credit Card
  = simple_form_for @form,:url => wizard_path, method: :put, html: { class: "max-600 mb-80" } do |f|
    .form-group{ class: ('has-error' if @form.errors.messages[:number].any?) }
      = f.label :number, 'Card Number', class: 'control-label input-label'
      = f.text_field :number, label: false, placeholder: "Card Number", id:'cardNumber',class:'form-control'
      %span.help-block= @form.errors.messages[:number].join(', ')
    .row
      .col-sm-6
        .form-group{ class: ('has-error' if @form.errors.messages[:card_name].any?) }
          = f.label :card_name, 'Name on Card', class: 'control-label input-label'
          = f.text_field :card_name, label: false, placeholder: "Name on Card", id:'cardName',class:'form-control'
          %span.help-block= @form.errors.messages[:card_name].join(', ')
      .col-sm-3
        .form-group{ class: ('has-error' if @form.errors.messages[:exp_date].any?) }
          = f.label :exp_date, 'MM / YY', class: 'control-label input-label'
          = f.text_field :exp_date, label: false, placeholder: "MM / YY", id:'cardName',class:'form-control'
          %span.help-block= @form.errors.messages[:card_name].join(', ')
      .col-sm-3
        .form-group.relative{ class: ('has-error' if @form.errors.messages[:cvv].any?) }
          = f.label :cvv, 'CVV', class: 'control-label input-label'
          = f.text_field :cvv, label: false, placeholder: "CVV",class:'form-control'
          %span.help-block= @form.errors.messages[:cvv].join(', ')
          %i.fa.fa-question-circle.general-form-help{ title: 'cvv hint' }
    .general-text-align
      %p.in-gold-500.font-18 Order Summary
      %table.general-summary-table
        %tr
          %td
            %p.font-16 Subtotal:
          %td
            %p.font-16 €117.69
        %tr
          %td
            %p.font-16 Coupon:
          %td
            %p.font-16 €0.00
        %tr
          %td
            %strong.font-18 Order Total:
          %td
            %strong.font-18 €117.69
    .container.mb-res-50.text-center
      = f.submit 'Save and Continue', class: 'btn btn-default mb-80'