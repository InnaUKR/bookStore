.mb-80
  %h3.in-gold-500.mb-25= t('.reviews_number', number: @reviews.count)
  -@reviews.each do |review|
    .general-message-wrap.divider-lg
      .clearfix
        - if review.user.avatar.blank?
          %span.img-circle.logo-size.inlide-block.pull-left.logo-empty= review.user.name.first.upcase
        - else
          = image_tag(review.user.avatar, class: 'img-circle logo-size inlide-block pull-left')
        .ml-70
          %div
            .general-message-date.hidden-xs= review.data_to_str
            .max-240
              .general-message-verified= t('.verified_reviewer')
              .general-message-name= review.user.name
          .mb-15
            -review.score.to_i.times do
              %i.fa.fa-star.rate-star
            -review.blank_stars.to_i.times do
              %i.fa.fa-star.rate-star.rate-empty
          %p= review.body