.col-xs-6.col-sm-3
  .general-thumb-wrap
    .thumbnail.general-thumbnail
      -if book.images!=[]
        =image_tag book.images.first.image_url, class: 'img-shadow general-thumbnail-img', alt: "book-image"
      .thumb-hover
        .general-thumb-link-wrap
          %a.thumb-hover-link{href: book_path(book)}
            %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
          =link_to line_items_path(line_item: {quantity: 1, book_id: book.id}),
          method: :post, class: 'thumb-hover-link' do
            %i.fa.fa-shopping-cart.thumb-icon
  .general-thumb-info
    %p.title= book.title
    %p.font-16.in-gold-500= show_price(book.price)
    %span.divider-sm
    %p.lead.small= book.authors_to_string